<!DOCTYPE html>
<html>
<head>
  <title>Communication</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

<p class="navbar-text pull-right">
  <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>.
      <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_user_session_path, method: :get, :class => 'navbar-link'  %>
  <% else %>
      <%= link_to "Sign in with Linkedin", user_omniauth_authorize_path(:linkedin), :class => 'navbar-link' %> |
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), :class => 'navbar-link' %> |
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
  <% end %>
</p>
<% if current_user %>
    <div class="container">
      <div class="header_menu_container">
        <div class="row">
          <div class="col-md-2 col-sm-2 col-lg-2">
            <%= link_to 'Home', users_path %>
          </div>
          <div class="col-md-2 col-sm-2 col-lg-2">
            <%= link_to 'Profile', user_path(current_user)%>
          </div>
          <div class="col-md-2 col-sm-2 col-lg-2">
            <div class="menu_class friend_request_menu">Friend+
              <div class="received_friend_request_container">

              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2 col-lg-2">
            <div class="menu_class notification_menu">Notification
              <div class="received_notification_container">
              </div>
            </div></div>
        </div>
      </div>
    </div>
<% end %>

<% if current_user %>
    <div class="container all_elements">
      <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
        <div class="col-lg-6 col-md-6 col-sm-6">
          <div class="frnd_search_field_and_container">
            <input type="text" class="search_text_field" placeholder="Search frineds....">
            <input type="button" class="search_button" value="Search">
            <div class="serched_friend_list_container"></div>
          </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
      </div>
      <br>
      <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-3">
          <% if @friend_list.any? %>
              <div class="chatting_contacts_container">
                <% @friend_list.each do |friend| %>
                    <% if friend.id!=@user_id %>
                        <div class="contacts" data-userinfo="<%= friend.to_json %>">
                          <%= friend.email%><br/>
                        </div>
                    <% end %>
                <% end %>
              </div>
          <% end %>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
          <%= yield %>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
      </div>
    </div>

    <div class="chatbar">
      <div class="alert_for_new_conversation">Get new conversation</div>
      <div class="titlebar">
        <span class="username">Name</span>
        <img src="/image/cancel.png" />

      </div>
      <div class="ChatContentField">
        <div class="chat_barAndMessage_container">
          <!--<div class="every_message">-->
          <!--<div class="username">Sahid</div>-->
          <!--<div class="body">It's a pleasure to meet you</div>-->
          <!--<div class="datetime">16.1.2015</div>-->
          <!--</div>-->
        </div>
        <div class="MessageInputField">
          <%= form_for Message.new, remote: true do |f| %>
              <%= hidden_field_tag :recipient_id %>
              <%= f.text_field :body, :class=>"text_input_field",:autocomplete => :off, :placeholder=>"Write something here....." %>
              <%= f.submit :class=>"hidden_class" %>
          <% end %>

        </div>
      </div>
    </div>
<% else %>
<%= yield %>
<% end %>



</body>
</html>
