<div class="single_comment">
  <% if current_user.profilepic.present? %>
      <%= link_to image_tag(current_user.profilepic, :border => 0, :alt => '', :title => current_user.name), user_path(current_user), :class => ''%>
  <% else %>
      <%= link_to image_tag("/image/profile-image2.gif", :border => 0, :alt => '', :title => current_user.name), user_path(current_user), :class => ''%>
  <% end %>
  <span class="commenter"><%= link_to current_user.name, user_path(current_user) %></span>
  <span class="comment_body"> <%= @comment.body %></span>
</div>